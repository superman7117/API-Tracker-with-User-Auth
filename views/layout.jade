doctype html
html
  head
    title Star Wars Theme
    link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:900', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') StarWars Theme App
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/register' class="registerBtn") Register
            li
              a(href='/login' class="loginBtn") Login
            li
              a(href='/users/logout' class="logoutBtn") Logout
            li
              a(href='/users/changepass' class="resetpassBtn") Change Password

    .container
      block content
    script(src='/lib/firebase/firebase.js')
